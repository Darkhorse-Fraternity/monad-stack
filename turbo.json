{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "lint-stage": {
      "outputs": []
    },
    "test": {
      "dependsOn": []
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "type-check":{
      "cache": false
    },
    "tsup:dev": {
      "cache": false
    },
    "tsup:build": {
      "cache": false
    }
  }
}
